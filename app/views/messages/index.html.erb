<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="col-sm-2 control-label">名前:</label>
    <div class="col-sm-6">
        <%= f.text_field :name, id:"message_name", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
     <label for="message_body" class="col-sm-2 control-label">内容:</label>
    <div class="col-sm-6">
        <%= f.text_area :body, id:"message_body", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>